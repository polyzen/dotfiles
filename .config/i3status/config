# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#b8bb26"
        color_bad = "#fb4934"
        color_degraded = "#fabd2f"
        separator = ""
        output_format = "i3bar"
        interval = 5
}

order += "volume master"
order += "disk /"
order += "disk /home"
order += "disk /var"
order += "disk /mnt/data"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"

tztime local {
        format = "☉ %a %d %H:%M:%S"
}

load {
        format = "⚒ %1min %5min %15min"
}

cpu_temperature 0 {
        format = "🌶 %degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon[1-3]/temp1_input"
}

disk "/" {
        format = "⊥ %avail"
        low_threshold = 25
        threshold_type = percentage_avail
}


disk "/home" {
        format = "🏠 %avail"
        low_threshold = 25
        threshold_type = percentage_avail
}

disk "/var" {
        format = "♼ %avail"
        low_threshold = 25
        threshold_type = percentage_avail
}

disk "/mnt/data" {
        format = "🖴 %avail"
        low_threshold = 25
        threshold_type = percentage_avail
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ muted (%volume)"
        device = "pulse:1"
}
