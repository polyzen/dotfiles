#!/usr/bin/env bash

set -e

BEEP=0
if [[ $1 == '-b' ]]; then
  BEEP=1
fi

timer() {
  termdown -T "$1" "$2"
  if [[ $BEEP -eq 1 ]]; then
    beep -f 5000 -l 50 -r 2
  fi
  toastify send --id 45 "$3" "$4"
}

pomodo=('<b>Po</b>modoro' 'Po<b>mo</b>doro' 'Pomo<b>do</b>ro')
for o in "${pomodo[@]}"; do
  timer Work 25m Break "$o"
  timer Break 5m Work
done

timer Work 25m Long\ break 'Pomodo<b>ro</b>'
timer Long\ break 15m Pomodoro
