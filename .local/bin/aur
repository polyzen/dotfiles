#!/usr/bin/env zsh

case $1 in
  pull)
    branch=${"$(<.git/HEAD)"##*/}
    git pull https://aur.archlinux.org/$branch.git master
    ;;
  push)
    branch=${"$(<.git/HEAD)"##*/}
    git push aur@aur.archlinux.org:$branch.git $branch:master
    ;;
  *)
    echo 'Usage: aur [pull|push]'
    echo 'Pull/Push current(orphan) branch from/to AUR repo of same name.'
esac
